<UserControl x:Class="ShoutyBird.UnitUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:ShoutyBird.ViewModel"
             xmlns:shoutyBird="clr-namespace:ShoutyBird"
             mc:Ignorable="d" 
             Width="Auto"
             Height="Auto"
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas Background="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type shoutyBird:UnitUserControl}}, Path=BackgroundBrush}">
    </Canvas>
</UserControl>
