<Window x:Class="ShoutyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:shoutyBird="clr-namespace:ShoutyBird"
        xmlns:viewModels="clr-namespace:ShoutyBird.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="640"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        FocusManager.FocusedElement="{Binding ElementName=Content}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:GameViewModel}">
            <shoutyBird:Game></shoutyBird:Game>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:AudioViewModel}">
            <shoutyBird:AudioMenu></shoutyBird:AudioMenu>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:MainMenuViewModel}">
            <shoutyBird:MainMenu/>
        </DataTemplate>
    </Window.Resources>
    <!--<shoutyBird:Game x:Name="Game"/>-->
    <!--<Frame Name="MainFrame" Source="MainMenu.xaml"/>-->
    <!--<shoutyBird:MainMenu/>-->
    <Grid>
        <ContentPresenter Name="Content" Content="{Binding CurrentViewModel}"></ContentPresenter>
    </Grid>
</Window>
